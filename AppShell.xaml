<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OnaNotes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnaNotes"
    xmlns:views="clr-namespace:OnaNotes.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar Title="Onasonic Notes">
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotes}"
            Icon="icon_notes"
            Route="MainPage" />
        
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="icon_about"
            Route="AboutPage" />
    </TabBar>

</Shell>
